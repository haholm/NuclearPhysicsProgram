                                <!--Symbol GES FRÅN ItemsSource-->
                            </local:ItemView>
                        </Button>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <ItemsControl Grid.Row="1"
                      Margin="260 0 0 0"
                      ItemsSource="{Binding ElementViewModel.SecondRightElements, Source={StaticResource pTableVM}}"
