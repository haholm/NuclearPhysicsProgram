                        </Button>
                    </Canvas>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <ItemsControl Grid.Row="6"
                      Margin="160 0 0 0"
                      Padding="0 0 6 0"
                      ItemsSource="{Binding ElementViewModel.SeventhRightElements, Source={StaticResource mainVM}}"
                      HorizontalContentAlignment="Right"
                      VerticalAlignment="Stretch"
                      Background="Transparent"
                      Opacity="{Binding PeriodicTableOpacity, Source={StaticResource pTableVM}, TargetNullValue=1}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Canvas Width="58">
                        <Border Style="{StaticResource PeriodicTableBorderStyle}">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="{Binding RenderTransform.ScaleX, ElementName=ItemButton}"
                                                ScaleY="{Binding RenderTransform.ScaleY, ElementName=ItemButton}"/>
                            </Border.RenderTransform>
                        </Border>
                        <Button x:Name="ItemButton" 
                                Style="{DynamicResource PeriodicTableItemStyle}" 
                                Command="{Binding OpenElementInfoCommand, Source={StaticResource mainVM}}"
                                RenderTransformOrigin="0.5,0.5">
                            <Button.CommandParameter>
                                <MultiBinding Converter="{StaticResource multipleCommandParameterConverter}">
                                    <Binding Path="Element.Symbol"/>
                                    <Binding Path="Element.MassNumber"/>
                                </MultiBinding>
                            </Button.CommandParameter>
                            <local:ItemView HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            Symbol="{Binding Element.Symbol}"
                                            AtomicNumber="{Binding Element.AtomicNumber}"
                                            PropertiesColor="{Binding AERColor}"
                                            EName="{Binding Element.Name}"
                                            />
                        </Button>
                    </Canvas>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel HorizontalAlignment="Right" 
                                Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <Canvas Width="{Binding SecondHiddenElementsWidth, Source={StaticResource pTableVM}}" 
                Height="58"
                Grid.Row="6"
                Margin="116 0 0 0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#f8f8f8">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseEnter">
                    <i:InvokeCommandAction Command="{Binding ExpandHiddenElementsCommand, Source={StaticResource pTableVM}}"
                                           CommandParameter="2"/>
                </i:EventTrigger>
                <i:EventTrigger EventName="MouseLeave">
                    <i:InvokeCommandAction Command="{Binding ContractHiddenElementsCommand, Source={StaticResource pTableVM}}"
                                           CommandParameter="2"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <Canvas Width="58"
                    >
                <Border Style="{StaticResource PeriodicTableBorderStyle}"
                        >
                    <Border.RenderTransform>
                        <ScaleTransform ScaleX="{Binding RenderTransform.ScaleX, ElementName=ItemButton2}"
                                        ScaleY="{Binding RenderTransform.ScaleY, ElementName=ItemButton2}"/>
                    </Border.RenderTransform>
                </Border>
                <Button x:Name="ItemButton2" 
                        Style="{DynamicResource PeriodicTableItemStyle}" 
                        RenderTransformOrigin="0.5,0.5">
                    <local:ItemView HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Symbol="+"
                                    AtomicNumber="14"
                                    PropertiesColorVisibility="Hidden"
                                    />
                </Button>
            </Canvas>

            <Canvas HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    Width="870"
                    Height="{Binding SecondHiddenElementsSize.Value.Height, Source={StaticResource pTableVM}}"
                    Visibility="{Binding SecondHiddenElementsVisibility, Source={StaticResource pTableVM}, TargetNullValue=Collapsed}"
                    >
                <Border >
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="5" 
                                          Color="Black"
                                          Opacity="1"
                                          />
                    </Border.Effect>
                </Border>
                <ItemsControl ItemsSource="{Binding ElementViewModel.SeventhHiddenElements, Source={StaticResource mainVM}}"
                              HorizontalAlignment="Stretch"
                              >
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Canvas Width="58">
                                <Border Style="{StaticResource PeriodicTableBorderStyle}">
                                    <Border.RenderTransform>
                                        <ScaleTransform ScaleX="{Binding RenderTransform.ScaleX, ElementName=ItemButton}"
                                                        ScaleY="{Binding RenderTransform.ScaleY, ElementName=ItemButton}"/>
                                    </Border.RenderTransform>
                                </Border>
                                <Button x:Name="ItemButton" 
                                        Style="{DynamicResource PeriodicTableItemStyle}" 
                                        Command="{Binding OpenElementInfoCommand, Source={StaticResource mainVM}}"
                                        RenderTransformOrigin="0.5,0.5">
                                    <Button.CommandParameter>
                                        <MultiBinding Converter="{StaticResource multipleCommandParameterConverter}">
                                            <Binding Path="Element.Symbol"/>
                                            <Binding Path="Element.MassNumber"/>
                                        </MultiBinding>
                                    </Button.CommandParameter>
                                    <local:ItemView HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    Symbol="{Binding Element.Symbol}"
                                                    AtomicNumber="{Binding Element.AtomicNumber}"
                                                    PropertiesColor="{Binding AERColor}"
                                                    EName="{Binding Element.Name}"
                                                    />
                                </Button>
                            </Canvas>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"
                                        />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Canvas>
        </Canvas>
    </Grid>
</UserControl>
