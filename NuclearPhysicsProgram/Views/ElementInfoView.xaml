<UserControl x:Class="NuclearPhysicsProgram.Views.ElementInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NuclearPhysicsProgram.Views"
             xmlns:elementInfoViews="clr-namespace:NuclearPhysicsProgram.Views.ElementInfoViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="CloseButtonStyle" 
               BasedOn="{StaticResource NoStyle}"
               TargetType="Button"
               >

        </Style>
    </UserControl.Resources>
    <Grid>
        <Border x:Name="Border"
                Margin="100,40,50,40"
                Background="#f0f2f0"
                CornerRadius="16"
                MaxWidth="1600"
                MaxHeight="800">
            <DockPanel Margin="16">
                <Border DockPanel.Dock="Top"
                        HorizontalAlignment="Right"
                        Width="32"
                        Height="24"
                        Margin="2"
                        Background="#15000000"
                        CornerRadius="2">
                    <Button Style="{StaticResource CloseButtonStyle}" 
                            Background="Red"
                            Command="{Binding CloseElementInfoCommand, Source={StaticResource mainVM}}" >
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center">x</TextBlock>
                    </Button>
                </Border>

                <elementInfoViews:ElementInfoIsotopeDropDownView HorizontalAlignment="Left" 
                                                                 DockPanel.Dock="Top"
                                                                 >
                </elementInfoViews:ElementInfoIsotopeDropDownView>

                <Canvas VerticalAlignment="Bottom"
                        HorizontalAlignment="Center"
                        Width="600"
                        Height="80">
                    <Border Canvas.Top="2" 
                            Canvas.Left="2" 
                            Width="596"
                            Height="76" 
                            BorderBrush="Black" 
                            BorderThickness="1"
                            CornerRadius="6">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="32" />
                        </Border.Effect>
                    </Border>
                    <Border Width="600"
                            Height="80"
                            BorderBrush="#22000000"
                            CornerRadius="6"
                            Background="White">
                    <elementInfoViews:IsotopeDecayChainView 
                                                            />
                    </Border>
                </Canvas>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
