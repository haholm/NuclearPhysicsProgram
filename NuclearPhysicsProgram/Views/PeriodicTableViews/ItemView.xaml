<UserControl x:Class="NuclearPhysicsProgram.Views.PeriodicTableViews.ItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NuclearPhysicsProgram.Views.PeriodicTableViews"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="80">
    <Border x:Name="Border" 
            Background="#FFEBEBEB" 
            CornerRadius="6"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Content="{Binding Path=Symbol, RelativeSource={RelativeSource AncestorType=local:ItemView}}"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" 
                   Margin="2,2,0,0"/>
        </Grid>
    </Border>
</UserControl>
