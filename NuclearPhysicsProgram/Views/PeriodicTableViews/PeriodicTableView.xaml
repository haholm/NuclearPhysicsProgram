<UserControl x:Class="NuclearPhysicsProgram.Views.PeriodicTableViews.PeriodicTableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NuclearPhysicsProgram.Views.PeriodicTableViews"
             xmlns:viewModels="clr-namespace:NuclearPhysicsProgram.ViewModels"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             >
    <UserControl.Resources>
        <viewModels:PeriodicTableViewModel x:Key="pTableVM"/>

        <Style x:Key="PeriodicTableStyle" 
               TargetType="{x:Type UserControl}">
            <Setter Property="Width" Value="{Binding ActualWidth, Source={StaticResource pTableVM}}"/>
            <Setter Property="Height" Value="{Binding ActualHeight, Source={StaticResource pTableVM}}"/>
        </Style>

        <Style x:Key="PeriodicTableBorderStyle"
               TargetType="{x:Type Border}">
            <Setter Property="Width" Value="{Binding PeriodicTableItemWidth, Source={StaticResource pTableVM}, TargetNullValue=60}"/>
            <Setter Property="Height" Value="{Binding PeriodicTableItemHeight, Source={StaticResource pTableVM}, TargetNullValue=60}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#FFEBEBEB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="{Binding PeriodicTableItemMargin, Source={StaticResource pTableVM}}"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" 
                                      ShadowDepth="2" 
                                      Direction="-36" 
                                      Opacity="0.25" 
                                      Color="Black" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PeriodicTableItemStyle"
               BasedOn="{StaticResource NoStyle}"
               TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="Transparent"
                                Width="{Binding PeriodicTableItemWidth, Source={StaticResource pTableVM}, TargetNullValue=60}"
                                Height="{Binding PeriodicTableItemHeight, Source={StaticResource pTableVM}, TargetNullValue=60}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Setter Property="Margin" Value="{Binding PeriodicTableItemMargin, Source={StaticResource pTableVM}}"/>

            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform />
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                 From="1"
                                                 To="1.08"
                                                 Duration="0:0:0.1"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                 From="1"
                                                 To="1.08"
                                                 Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                 To="1"
                                                 Duration="0:0:0.1"/>
                                <!--LEAVING OUT FROM PROPERTY DEFAULTS TO DEFAULT-->
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                 To="1"
                                                 Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
